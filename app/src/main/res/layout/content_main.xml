<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">

    <TextView
            android:text="$"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"

            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/input" android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.984" app:layout_constraintBaseline_toBaselineOf="@+id/input"/>
    <Button
            android:layout_width="113dp"
            android:layout_height="63dp"
            android:id="@+id/button"
            android:text="Calculate Tip"
            android:enabled="false"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/input" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.058"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.5"/>
    <EditText
            android:layout_width="74dp"
            android:layout_height="54dp"
            android:id="@+id/input"

            android:inputType="numberDecimal"
            android:hint="Amount"


            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="132dp" android:layout_marginRight="132dp" android:layout_marginTop="220dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.819"/>

</android.support.constraint.ConstraintLayout>